<% @streams.each do |stream| %>
  

  <% if current_user && @category == 'favorites'%>
    <script>
      $('#bump<%= stream.id %>').click(function(){
        $('#stream<%= stream.id %>').hide('slow');
      });
    </script>
  <% elsif current_user && current_user.streams.include?(stream) %>
    <script>
      $('#bump<%= stream.id %>').click(function(){
        $('#fav<%= stream.id %>').hide('slow');
      });

      $('#bump_rank<%= stream.id %>').click(function(){
        $('#grr<%= stream.id %>').hide('slow');
      });
    </script>
  <% end %>

  <% if current_user %>
    <script>
    $('#first_bump<%= stream.id %>').click(function(){
        $('#first_bump_holder<%= stream.id %>').hide('');
        $('#second_bump<%= stream.id %>').show('slow');
      });
    $('#second_bump<%= stream.id %>').click(function(){
      $('#second_bump_holder<%= stream.id %>').hide('slow');
    });
    setTimeout(function(){updateStream(<%= stream.id %>)}, 10000);
    </script>
  <% else %>
    <script>
      $('#bump_rank<%=j stream.id.to_s %>').hide();
      $('#bump<%= stream.id %>').click(function(){
        $('#bump<%= stream.id %>').hide();
        $('#bump_rank<%= stream.id %>').show();      
      });

      $('#left<%= stream.id %>').click(function(){
        $('#stream<%= stream.id %>').prependTo("#stream_table");
      });

      $('#right<%= stream.id %>').click(function(){
        $('#stream<%= stream.id %>').appendTo("#stream_table");
      });

      setTimeout(function(){updateStream(<%= stream.id %>)}, 10000);

    </script>
  <% end %>

<% end %>
 
