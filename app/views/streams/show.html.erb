<% @data.css(@stream.item).each do |i| %>
  <% @title = i.at_css(@stream.title).text %>
  <% @by_line = i.at_css(@stream.by_line).text unless i.at_css(@stream.by_line).nil?  %>
  <% @body = i.at_css(@stream.body).text unless i.at_css(@stream.body).nil?  %>
  <% @picture = i.at_css(@stream.picture).text unless i.at_css(@stream.picture).nil?  %>
  <% @item_link = i.at_css(@stream.item_link).map { |link| link['href'] } %>
  <h1><%= @title if @title %></h1>
  <p><%= @item_link if @item_link %></p>
  <p><%= @by_line if @by_line %></p>
  <p><%= @body if @body %></p>
  <br>
  <br>
<% end %>



