                <%= link_to categories_path(@game, 'blogs'), style: "color:white !important;" do %>
                  <span class="label label-info", style="color:black; background-color:white;">
                    <%= @game_streams.select {|s| s.category.split(" ").include? 'blog'}.length %>
                  </span>
                  <%= " Blogs" %>
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to categories_path(@game, 'blogs') do %>
                  <span class="label ", style="color:black;">
                    <%= @game_streams.select {|s| s.category.split(" ").include? 'blog'}.length %>
                  </span>
                   <%= " Blogs" %>
                <% end %>
              </li>
            <% end %>
            
            <% if @category && @category == 'videos' %>
              <li class="active">
                <%= link_to categories_path(@game, 'videos'), style: "color:white !important;"  do %>
                  <span class="label label-info", style="color:black; background-color:white;">
                    <%= @game_streams.select {|s| s.category.split(" ").include? 'video'}.length %>
                  </span>
                   <%= " Videos" %>
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to categories_path(@game, 'videos') do %>
                <span class="label ", style="color:black;">
                  <%= @game_streams.select {|s| s.category.split(" ").include? 'video'}.length %>
                </span>
                 <%= " Videos" %>
                <% end %>
              </li>
            <% end %>

            <% if @category && @category == 'podcasts' %>
              <li class="active">
                <%= link_to categories_path(@game, 'podcasts'), style: "color:white !important;" do %>
                  <span class="label label-info", style="color:black; background-color:white;">
                    <%= @game_streams.select {|s| s.category.split(" ").include? 'podcast'}.length %>
                  </span>
                   <%= " Podcasts" %>
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to categories_path(@game, 'podcasts') do %>
                  <span class="label ", style="color:black;">
                    <%= @game_streams.select {|s| s.category.split(" ").include? 'podcast'}.length %>
                  </span>
                   <%= " Podcasts" %>
                <% end %>
              </li>
            <% end %>

            <% if @category && @category == 'boards' %>
              <li class="active">
                <%= link_to categories_path(@game, 'boards'), style: "color:white !important;" do %>
                  <span class="label label-info", style="color:black; background-color:white;">
                    <%= @game_streams.select {|s| s.category.split(" ").include? 'board'}.length %>
                  </span>
                   <%= " Boards" %>
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to categories_path(@game, 'boards') do %>
                  <span class="label ", style="color:black;">
                    <%= @game_streams.select {|s| s.category.split(" ").include? 'board'}.length %>
                  </span>
                   <%= " Boards" %>
                <% end %>
              </li>
            <% end %>

            <% if @category && @category == 'mainstreams' %>
              <li class="active">
                <%= link_to categories_path(@game, 'mainstreams'), style: "color:white !important;" do %>
                  <span class="label label-info", style="color:black; background-color:white;">
                    <%= @game_streams.select {|s| s.category.split(" ").include? 'mainstream'}.length %>
                  </span>
                   <%= " Mainstream Sites" %>
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to categories_path(@game, 'mainstreams') do %>
                  <span class="label ", style="color:black;">
                    <%= @game_streams.select {|s| s.category.split(" ").include? 'mainstream'}.length %>
                  </span>
                   <%= " Mainstream Sites" %>
                <% end %>
              </li>
            <% end %>

            <li>
              <ul class="nav pull-right">
                <li class="divider-vertical"></li>
                <% if current_user %>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      <i class="icon-heart"></i> <%= current_user.email %> <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li>
                        <%= link_to categories_path(@game, 'favorites') do %>
                          <i class="icon-heart"></i> <%= "My #{@game} Favorites!" %>
                        <% end %>
                      </li>
                      <li class="divider"></li>
                      <li>
                        <%= link_to "#wildScrapeModal", role: "button", "data-toggle" => "modal" do %>
                          
                            <i class="icon-rocket"></i>
                            
                             Info
                        <% end %>
                      </li>
                      <li>
                        <%= link_to "#gamesModal", role: "button", "data-toggle" => "modal" do %>
                          
                            <i class="icon-gamepad"></i>
                         
                           Scrapes
                        <% end %>
                      </li>
                      <li class="divider"></li>
                      <li>
                        <%= link_to destroy_user_session_path, :method => :delete do %>
                          <i class="icon-signout"></i> Sign out
                        <% end %>
                      </li>
                    </ul>
                  </li>
                <% else %>
                  <li>
                    <%= link_to "#modal-log-in", 'data-toggle' => "modal" do %>
                      <i class="icon-signin"></i> Sign in
                    <% end %>
                  </li>
                <% end %>
                <li>
                  <%= link_to scrapebot_path(:game => @game) do %>
                    <%= image_tag "https://si0.twimg.com/profile_images/378800000149227367/6b2cca11b434c22f7af402aae4e6e4dc_bigger.jpeg", style: "width: 30px; margin-top: -5px; border-color: #33b5e5; border-width: 1px;" %>
                  <% end %>
                </li>
              </ul>

            </li>
          </ul>
        <% end %>
         
        </div>
      </div>
    </div>

    <div class="" style="margin-top:10px;">  
      <%= yield %>
    </div>

  </body>
</html>

