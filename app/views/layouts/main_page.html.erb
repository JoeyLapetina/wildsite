<script>
$(document).ready(function() {

  $('#info').hide();
  $('#tab').mouseenter(function() {
    $('#info').show('fast');
    $('#tab').css("margin-top", "-10px")
  });
  $('#tab').mouseleave(function() {
    $('#info').hide('fast');
    $('#tab').css("margin-top", "-25px")
  });
});
</script>
