<!DOCTYPE html>
<html>
<head>
  <title>WildScrape</title>
  <link href="<%= asset_path('favicon.ico') %>" rel="shortcut icon">
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <style>
  .hide {
    display:none;
  }
  </style>
</head>
  <body class="off">
    <%= link_to "#" do %>
      <div id="explanation_tab">
        <p>ABOUT WILDSCRAPE</p>
      </div>
    <% end %>

    <%= link_to "#" do %>
      <div id="info_tab">
        <p>WHATS WHAT?</p>
      </div>
    <% end %>

    <%= link_to "https://trello.com/board/wildscrape-roadmap/51718857476549314e005c22" do %>
      <div id="road_map">
        <i class="icon-truck"></i>
      </div>
    <% end %>

    <%= link_to new_submission_path do %>
      <div id="new_submission_link" >
        <p><i class="icon-cloud"></i> Add a stream!</p>
      </div>
    <% end %>

    <% if params[:notice] %>
      <div id="notice" class="btn btn-inverse"><%= notice %></div>
    <% end %>

  	<div class="" style="margin-top:10px;">  
  		<%= yield %>
  	</div>
  </body>
</html>

