<script>
  $(document).ready(function() {
    var window_width = $(window).width();
    var site_width = $('#main_table').width();
    var window_height = $(window).height();
    var table_width = $('#main_table').width();

    var right_over = false;
    var left_over = false;

    $(".left_add").css({
        "width": window_width / 8,
    });

    $("#left_box").css({
      "width": window_width / 8,
      "height": window_height
    });

    $("#right_box").css({
      "width": window_width / 8,
      "height": window_height,
      "margin-left": window_width - window_width / 8
    });

    $("#right_box").mouseover(function() {
        var current_margin = parseInt($('#main_table').css('margin-left'), 10);

        var next_right = (current_margin + table_width - window_width + 620 + window_width / 8);

        $('#right_box').css({
          "background": "rgba(255, 255, 255, 0.16)"
        });

        $('#main_table').animate({
          'margin-left': '-=' + next_right
        }, next_right * 2, function() {
          // Animation complete.
        });
    });

    $("#left_box").mouseenter(function() {
      var current_margin = parseInt($('#main_table').css('margin-left'), 10);
      var next_left = (current_margin - 30);

      $('#left_box').css({
        "background": "rgba(255, 255, 255, 0.16)"
      });

      $('#main_table').animate({
        'margin-left': '-=' + next_left
      }, (next_left * 2) * -1, function() {
        // Animation complete.
      });
    });

    $('#right_box').mouseout(function() {
      $('#main_table').stop();

      $('#right_box').css({
        "background": "rgba(255, 255, 255, 0)"
      });
    });

    $('#left_box').mouseout(function() {
      $('#main_table').stop();

      $('#left_box').css({
        "background": "rgba(255, 255, 255, 0)"
      });
    });

    $('#left').click(function() {
      $('#main_table').animate({
        'margin-left': '+=' + (window_width - 100)
      }, 500, function(){

      })
    });

    $('#right').click(function() {
      $('#main_table').animate({
        'margin-left': '-=' + (window_width - 100)
      }, 500, function(){

      })
    });

    $('.bump_text').click(function() {
      $(this).replaceWith('thanks');
    });

    $('#notice').click(function() {
      $('#notice').hide('fast');
    });

    $('#kill').click(function() {
      $('#hist').remove();
    });

    
  });
</script>

